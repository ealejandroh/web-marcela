---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import CTA from '../components/blocks/CTA/BasicDark.astro'
import ContactCards from '../components/blocks/contact/ContactCards.astro'
import SocialProof from '../components/blocks/socialproof/Basic.astro'

// Content
// - SEO
const SEO = {
	title: 'Contactame - Dedica una canción',
	description:
		'Serenatas virtuales, video recuerdos o serenatas en vivo'
}
// - Page Header
const header = {
	title: 'Como te puedo <strong>ayudar</strong> ?',
	text: "Si quieres separar alguna serenata, tienes alguna pregunta, necesitas ayuda o simplemente quieres compartir tus comentarios, estoy aquí para ayudarte. Ponte en contacto conmigo y te responderé lo antes posible."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
</Layout>
