---
// Basic Dark Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, background image, notification and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import ChipNotification from '../../ui/ChipNotification.astro'
import { Image } from 'astro:assets'
import Highlight from '../../ui/Highlight.astro'

// Content
import ctaImage from '../../../assets/cta-dark-bg-01.jpg'
import badge from '../../../assets/badge.svg'
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title="Cada serenata es un momento único!"
				text="Cantar es mi pasión, y mi misión es convertir tus sentimientos en melodías que toquen corazones!"
				mode="dark"
				bg={ctaImage}
			>
				<Button size="lg" style="primary" link='/web-marcela/contact'> Separa una ahora! </Button>
			</CTA>
		</Col>
		<Col span="1" />
	</Row>
</Section>
